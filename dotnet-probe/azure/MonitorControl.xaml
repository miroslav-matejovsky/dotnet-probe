<UserControl x:Class="dotnet_probe.azure.MonitorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Azure Monitor POC" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Margin="10">
            <Label Content="Metrics" HorizontalAlignment="Center" FontSize="18"/>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Key" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="5"/>
                <TextBlock Text="Value" Grid.Row="0" Grid.Column="1" FontWeight="Bold" Margin="5"/>
                <TextBox x:Name="Key1TextBox" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="Value1TextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="Key2TextBox" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="Value2TextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="Key3TextBox" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="Value3TextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="Key4TextBox" Grid.Row="4" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="Value4TextBox" Grid.Row="4" Grid.Column="1" Margin="5"/>
                <Button Content="SendMetrics" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Click="SendMetricsButton_Click" Margin="5"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
