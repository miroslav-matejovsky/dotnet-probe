<UserControl x:Class="dotnet_probe.sso.WebControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="SSO Web POC" FontSize="24" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Start Server" Click="StartServer" Width="100" Margin="0,0,10,0"/>
                <Button Content="Stop Server" Click="StopServer" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>