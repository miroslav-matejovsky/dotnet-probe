<UserControl x:Class="dotnet_probe.azure.AzureMonitorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="ServiceCountTextBox" Width="50" Margin="0,0,10,0" VerticalContentAlignment="Center" Text="1"/>
                <Button Content="Start Services" Click="StartServicesButton_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Stop Services" Click="StopServicesButton_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>